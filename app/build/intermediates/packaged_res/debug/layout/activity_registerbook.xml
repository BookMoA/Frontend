<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgBookCover"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/img_register_book" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="책 제목"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="책 제목을 입력해주세요"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:text="지은이"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAuthour"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="지은이를 입력해주세요"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:text="출판사"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPublisher"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="출판사 이름을 입력해주세요"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:text="ISBN"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etIsbn"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="ISBN을 입력해주세요"
                android:inputType="text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:text="페이지 수"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPage"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="페이지 수를 입력해주세요"
                android:inputType="text"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="#E2E2E2"
                android:text="책 저장하기" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>