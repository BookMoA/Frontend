<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mypage.UseInfoFAQFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".mypage.AllFAQFragment"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/question_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_grey5_r10"
            android:layout_marginTop="20.5dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="29dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/question_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q. 책모아는 무료로 이용할 수 있나요?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrow_icon1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0" />

            <ImageView
                android:id="@+id/arrow_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/question_tv1"
                app:layout_constraintBottom_toBottomOf="@id/question_tv1"
                android:layout_marginEnd="8dp" />

            <View
                android:id="@+id/question_1_guideline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="19.28dp"
                android:background="#C6C6C6"
                android:visibility="gone"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question_tv1" />

            <TextView
                android:id="@+id/answer_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18.6dp"
                android:text="A. 책모아 앱은 무료로 다운로드하실 수 있어요."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question_1_guideline" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/question_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_grey5_r10"
            android:layout_marginTop="29dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="29dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/question_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Q. 다른 기기에서 책모아를 이용할 수 있나요?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrow_icon2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0" />

            <ImageView
                android:id="@+id/arrow_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/question_tv2"
                app:layout_constraintBottom_toBottomOf="@id/question_tv2"
                android:layout_marginEnd="8dp" />


            <View
                android:id="@+id/question_2_guideline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="19.28dp"
                android:background="#C6C6C6"
                android:visibility="gone"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question_tv2" />

            <TextView
                android:id="@+id/answer_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18.6dp"
                android:text="A. 물론이에요! 계정 연동 서비스이기 때문에 다른 기기에서도 동일한 계정으로 로그인하신다면 이전에 사용하신 데이터 그대로 이용하실 수 있어요.\n\n

    추가적으로 책모아는 한 개의 계정 당 한 명의 데이터 관리만 가능하기 때문에, 다른 계정으로 이용하고 싶으시다면 마이페이지에서 로그아웃 후 다른 계정으로 로그인 하실 수 있습니다."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question_2_guideline" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/question_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_grey5_r10"
            android:layout_marginTop="29dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="29dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/question_tv3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Q. 검색해도 나오지 않는 책이 있어요."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrow_icon3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0" />

            <ImageView
                android:id="@+id/arrow_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/question_tv3"
                app:layout_constraintBottom_toBottomOf="@id/question_tv3"
                android:layout_marginEnd="8dp" />

            <View
                android:id="@+id/question_3_guideline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="19.28dp"
                android:background="#C6C6C6"
                android:visibility="gone"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question_tv3" />

            <TextView
                android:id="@+id/answer_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18.6dp"
                android:text="A. 책모아는 알라딘 데이터베이스를 활용해 책 정보를 제공하고 있으며, 간혹 검색한 책이 없는 경우가 있을 수 있습니다.\n\n

    그럴 때는 ‘책 등록하기’ 기능을 통해 직접 책을 등록할 수 있습니다."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question_3_guideline" />

            <LinearLayout
                android:id="@+id/book_register_guide_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35.37dp"
                android:background="@drawable/bg_button_color_r10"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/answer_tv3" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.08dp"
                    android:src="@drawable/ic_faq_question" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3.9dp"
                    android:layout_marginEnd="10.08dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="책 등록하는 방법"
                    android:textSize="11sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/book_register_guide_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="검색 > 검색어 입력 > 하단의 ‘책 등록하기’"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_register_guide_ic" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</ScrollView>