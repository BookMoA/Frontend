<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/nextleader_crown_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/nextleader_profile_iv"
        android:layout_marginStart="-4dp"
        android:layout_marginBottom="48dp"
        android:layout_alignBottom="@id/nextleader_profile_iv"
        android:src="@drawable/icon_crown" />

    <ImageView
        android:id="@+id/nextleader_profile_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_profile" />

    <ImageView
        android:id="@+id/nextleader_grey_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_selectgrey" />

    <ImageView
        android:id="@+id/nextleader_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_selectcheck" />

    <TextView
        android:id="@+id/nextleader_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextleader_profile_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nextleader_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextleader_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="자신의 프로필은\n선택할 수 없습니다."
        android:textColor="@color/grey3"
        android:textSize="10sp" />

</RelativeLayout>