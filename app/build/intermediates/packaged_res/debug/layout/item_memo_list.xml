<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/item_search_memo_cover_iv"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="#D9D9D9"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_search_memo_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="책 제목"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/item_search_memo_cover_iv"
        app:layout_constraintTop_toTopOf="@id/item_search_memo_cover_iv" />

    <TextView
        android:id="@+id/item_memo_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="지은이"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/item_search_memo_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_search_memo_title_tv" />

    <TextView
        android:id="@+id/item_memo_contents_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="내용"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_memo_author_tv"
        app:layout_constraintTop_toBottomOf="@id/item_memo_author_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/grey6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>