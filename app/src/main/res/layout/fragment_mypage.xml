<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MypageFragment">

    <ImageView
        android:id="@+id/top_bar_back_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.15dp"
        android:src="@drawable/ic_topbar_left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_tv"
        app:layout_constraintBottom_toBottomOf="@id/mypage_tv"/>

    <TextView
        android:id="@+id/mypage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="13.25dp"
        android:layout_marginBottom="13.25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/topbar_guideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_tv" />


    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="48dp"
        android:src="@drawable/ic_profile_unfilled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_tv" />

    <TextView
        android:id="@+id/nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="29dp"
        android:text="닉네임"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/profile_iv"
        app:layout_constraintTop_toTopOf="@id/profile_iv"
        app:layout_constraintBottom_toTopOf="@id/bookGroupName_tv"/>

    <TextView
        android:id="@+id/bookGroupName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:text="독서그룹명"
        android:textSize="18sp"
        android:textColor="@color/grey2"
        app:layout_constraintStart_toStartOf="@id/nickname_tv"
        app:layout_constraintTop_toBottomOf="@id/nickname_tv"
        app:layout_constraintBottom_toBottomOf="@id/profile_iv" />

    <View
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="61.5dp"
        android:background="@color/grey6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookGroupName_tv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="28.5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline" >

        <TextView
            android:id="@+id/change_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 변경"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/notice_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="알림 설정"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="로그아웃"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <View
            android:id="@+id/setting_guideline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey5"
            android:layout_marginTop="22dp" />

        <TextView
            android:id="@+id/FAQ_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="자주 묻는 질문"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/inquiry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="문의하기 / 의견 보내기"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <View
            android:id="@+id/question_guideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey5"
            android:layout_marginTop="22dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/rating_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="평점 남기기"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/intro_moa_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="책모아 팀 소개"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/serviceTerms_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="이용약관"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/privacyPolicy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="개인정보 처리방침"
            android:textSize="14sp"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>