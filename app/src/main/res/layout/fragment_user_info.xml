<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mypage.UserInfoFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/question_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_color_r20"
        android:layout_marginTop="29dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="29dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/question_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Q. 회원탈퇴는 어떻게 하나요?"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/arrow_icon4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0" />

        <ImageView
            android:id="@+id/arrow_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/answer_tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A. 회원탈퇴는 마이페이지 > 프로필 변경 > 하단의 회원탈퇴 메뉴를 이용해 주세요.\n\n회원탈퇴 후에는 모든 기록이 사라지며 절대 되돌릴 수 없어요.\n\n회원탈퇴 중 오류가 발생한 경우에는 마이페이지 > 문의하기/의견 보내기 메뉴를 통해 이메일을 보내주시면 빠르게 처리 도와드릴게요.\n\n그동안 책모아와 함께해주셔서 감사해요!"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:padding="15dp"
        android:background="@drawable/bg_button_color_r20"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_layout4" />
</LinearLayout>