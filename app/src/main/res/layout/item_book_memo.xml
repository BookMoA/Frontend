<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="39dp">

    <ImageView
        android:id="@+id/book_iv"
        android:layout_width="81dp"
        android:layout_height="118dp"
        android:background="#F5F5F5"
        android:text="책표지"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="책 제목"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/book_iv"
        app:layout_constraintEnd_toEndOf="@id/book_iv"
        app:layout_constraintTop_toBottomOf="@id/book_iv" />

    <TextView
        android:id="@+id/bookAuthor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="지은이"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/book_iv"
        app:layout_constraintEnd_toEndOf="@id/book_iv"
        app:layout_constraintTop_toBottomOf="@id/bookName_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>